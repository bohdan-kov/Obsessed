rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Workout data validation functions
    function isValidWeight(weight) {
      return weight is number && weight >= 0 && weight <= 1000; // Max 1000kg (from CONFIG.workout.MAX_WEIGHT)
    }

    function isValidReps(reps) {
      return reps is number && reps >= 1 && reps <= 100; // 1-100 reps (from CONFIG.workout.MAX_REPS)
    }

    function isValidRPE(rpe) {
      return rpe == null || (rpe is number && rpe >= 1 && rpe <= 10); // 1-10 or null (from CONFIG.workout.RPE_MIN/MAX)
    }

    function isValidWorkout(workout) {
      return workout.keys().hasAll(['userId', 'exercises']) &&
             workout.userId == request.auth.uid &&
             workout.exercises is list &&
             workout.exercises.size() >= 0 &&
             workout.exercises.size() <= 20; // Max 20 exercises per workout (reasonable limit)
    }

    // Validate that all exercises in the workout have the required structure
    function areExercisesValid(exercises) {
      // Empty array is always valid (new workouts start empty)
      return exercises.size() == 0 ||
             // Check each exercise has required fields
             exercises.hasAll(['exerciseId', 'sets']);
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      allow read, write: if isOwner(userId);

      // Nested workouts subcollection with data validation
      match /workouts/{workoutId} {
        allow read: if isOwner(userId);

        // Validate workout data on create and update
        allow create, update: if isOwner(userId) && isValidWorkout(request.resource.data);

        allow delete: if isOwner(userId);
      }

      // Nested custom exercises subcollection
      match /customExercises/{exerciseId} {
        allow read, write: if isOwner(userId);
      }

      // Nested exercise notes subcollection
      match /exerciseNotes/{exerciseId} {
        allow read, write: if isOwner(userId);
      }

      // Nested workout plans subcollection
      match /workoutPlans/{planId} {
        allow read: if isOwner(userId);

        // Validation helper for workout plans
        function isValidPlan(plan) {
          return plan.keys().hasAll(['userId', 'name', 'exercises']) &&
                 plan.userId == request.auth.uid &&
                 plan.name is string &&
                 plan.name.size() >= 2 &&
                 plan.name.size() <= 50 &&
                 plan.exercises is list &&
                 plan.exercises.size() >= 1 &&
                 plan.exercises.size() <= 15;
        }

        allow create: if isOwner(userId) && isValidPlan(request.resource.data);
        allow update: if isOwner(userId) && isValidPlan(request.resource.data);
        allow delete: if isOwner(userId);
      }
    }

    // Shared exercises collection (read-only for authenticated users)
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can write via Firebase Console
    }

    // Muscle groups collection (read-only)
    match /muscle_groups/{groupId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can write
    }

    // Personal records
    match /personal_records/{recordId} {
      allow read, write: if isAuthenticated() &&
                           request.auth.uid == resource.data.userId;
    }
  }
}
