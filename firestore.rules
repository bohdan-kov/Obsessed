rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }

    // Workout data validation functions
    function isValidWeight(weight) {
      return weight is number && weight >= 0 && weight <= 1000; // Max 1000kg (from CONFIG.workout.MAX_WEIGHT)
    }

    function isValidReps(reps) {
      return reps is number && reps >= 1 && reps <= 100; // 1-100 reps (from CONFIG.workout.MAX_REPS)
    }

    function isValidRPE(rpe) {
      return rpe == null || (rpe is number && rpe >= 1 && rpe <= 10); // 1-10 or null (from CONFIG.workout.RPE_MIN/MAX)
    }

    function isValidWorkout(workout) {
      return workout.keys().hasAll(['userId', 'exercises']) &&
             workout.userId == request.auth.uid &&
             workout.exercises is list &&
             workout.exercises.size() >= 0 &&
             workout.exercises.size() <= 20; // Max 20 exercises per workout (reasonable limit)
    }

    // Validate that all exercises in the workout have the required structure
    function areExercisesValid(exercises) {
      // Empty array is always valid (new workouts start empty)
      return exercises.size() == 0 ||
             // Check each exercise has required fields
             exercises.hasAll(['exerciseId', 'sets']);
    }

    // Users collection - users can read/write their own data
    match /users/{userId} {
      // CRITICAL FIX: Allow authenticated users to read basic profile data for community features
      allow read: if isAuthenticated();

      // Allow owner to write/update their own document
      allow create, delete: if isOwner(userId);

      // Allow owner to update any fields in their document
      allow update: if isOwner(userId);

      // COMMUNITY FIX: Allow any authenticated user to update ONLY follower/following counts
      // This is needed when user A follows user B - user A needs to update user B's followerCount
      // Restrict updates to ONLY these specific fields to prevent abuse
      allow update: if isAuthenticated() &&
                       // Only allow updating updatedAt, profile.followerCount, or profile.followingCount
                       (
                         // Check if only updatedAt and profile fields are being modified
                         request.resource.data.diff(resource.data).affectedKeys().hasOnly(['updatedAt', 'profile']) &&
                         // Check that within profile, only followerCount or followingCount are being modified
                         request.resource.data.profile.diff(resource.data.profile).affectedKeys().hasOnly(['followerCount', 'followingCount'])
                       );

      // Nested workouts subcollection with data validation
      match /workouts/{workoutId} {
        allow read: if isOwner(userId);

        // Validate workout data on create and update
        allow create, update: if isOwner(userId) && isValidWorkout(request.resource.data);

        allow delete: if isOwner(userId);
      }

      // Nested custom exercises subcollection
      match /customExercises/{exerciseId} {
        allow read, write: if isOwner(userId);
      }

      // Nested exercise notes subcollection
      match /exerciseNotes/{exerciseId} {
        allow read, write: if isOwner(userId);
      }

      // Nested workout plans subcollection
      match /workoutPlans/{planId} {
        allow read: if isOwner(userId);

        // Validation helper for workout plans
        function isValidPlan(plan) {
          return plan.keys().hasAll(['userId', 'name', 'exercises']) &&
                 plan.userId == request.auth.uid &&
                 plan.name is string &&
                 plan.name.size() >= 2 &&
                 plan.name.size() <= 50 &&
                 plan.exercises is list &&
                 plan.exercises.size() >= 1 &&
                 plan.exercises.size() <= 15;
        }

        allow create: if isOwner(userId) && isValidPlan(request.resource.data);
        allow update: if isOwner(userId) && isValidPlan(request.resource.data);
        allow delete: if isOwner(userId);
      }

      // Nested workout templates subcollection (for schedule feature)
      match /workoutTemplates/{templateId} {
        allow read: if isOwner(userId);

        // Validation helper for workout templates
        function isValidTemplate(template) {
          return template.keys().hasAll(['name', 'exercises', 'muscleGroups', 'estimatedDuration']) &&
                 template.name is string &&
                 template.name.size() >= 2 &&
                 template.name.size() <= 100 &&
                 template.exercises is list &&
                 template.exercises.size() >= 1 &&
                 template.exercises.size() <= 20 &&
                 template.muscleGroups is list &&
                 template.estimatedDuration is number &&
                 template.estimatedDuration >= 0 &&
                 template.estimatedDuration <= 300;
        }

        allow create: if isOwner(userId) && isValidTemplate(request.resource.data);
        allow update: if isOwner(userId) && isValidTemplate(request.resource.data);
        allow delete: if isOwner(userId);
      }

      // Nested schedules subcollection (for weekly workout schedules)
      match /schedules/{weekId} {
        allow read: if isOwner(userId);

        // Validation helper for weekly schedules
        function isValidSchedule(schedule) {
          return schedule.keys().hasAll(['userId', 'weekStart', 'days']) &&
                 schedule.userId == request.auth.uid &&
                 schedule.days is map &&
                 schedule.days.keys().hasAll(['monday', 'tuesday', 'wednesday', 'thursday', 'friday', 'saturday', 'sunday']);
        }

        allow create: if isOwner(userId) && isValidSchedule(request.resource.data);
        allow update: if isOwner(userId) && isValidSchedule(request.resource.data);
        allow delete: if isOwner(userId);
      }

      // COMMUNITY: Followers subcollection
      // Anyone authenticated can read to check follow relationships
      match /followers/{followerId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && request.auth.uid == followerId;
        allow delete: if isAuthenticated() && request.auth.uid == followerId;
      }

      // COMMUNITY: Following subcollection
      // Anyone authenticated can read to check follow relationships
      match /following/{followingId} {
        allow read: if isAuthenticated();
        allow create, delete: if isOwner(userId);
      }

      // COMMUNITY: Blocked users subcollection (private - only owner)
      match /blockedUsers/{blockedUid} {
        allow read, write: if isOwner(userId);
      }

      // COMMUNITY: Privacy settings subcollection
      match /settings/{document=**} {
        allow read, write: if isOwner(userId);
      }
    }

    // Shared exercises collection (read-only for authenticated users)
    match /exercises/{exerciseId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can write via Firebase Console
    }

    // Muscle groups collection (read-only)
    match /muscle_groups/{groupId} {
      allow read: if isAuthenticated();
      allow write: if false; // Only admins can write
    }

    // Personal records
    match /personal_records/{recordId} {
      allow read, write: if isAuthenticated() &&
                           request.auth.uid == resource.data.userId;
    }

    // Goals collection - users can only access their own goals
    match /goals/{goalId} {
      // Users can read their own goals
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;

      // Users can create goals (must be their own)
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid;

      // Users can update their own goals
      allow update: if isAuthenticated() &&
                       resource.data.userId == request.auth.uid &&
                       request.resource.data.userId == request.auth.uid;

      // Users can delete their own goals
      allow delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }

    // ============================================================================
    // COMMUNITY SECTION - Social Features
    // ============================================================================

    // SIMPLIFIED HELPER FUNCTIONS (no get() calls to avoid permission loops)
    // These are now handled by checking subcollections with exists()

    function isFollowingUser(targetUserId) {
      // Check if current user has targetUserId in their following subcollection
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)/following/$(targetUserId));
    }

    function isBlockedByUser(targetUserId) {
      // Check if current user has blocked targetUserId
      return exists(/databases/$(database)/documents/users/$(request.auth.uid)/blockedUsers/$(targetUserId));
    }

    // Community: Feed collection
    match /feed/{postId} {
      // SIMPLIFIED READ RULE: Allow authenticated users to read posts
      // Privacy filtering will be handled in the application layer
      allow read: if isAuthenticated();

      // Create post: must be authenticated and own the post
      allow create: if isAuthenticated() &&
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['userId', 'workoutId', 'visibility', 'workout']);

      // Update/Delete: only post owner
      allow update, delete: if isAuthenticated() &&
                               resource.data.userId == request.auth.uid;

      // Likes subcollection
      match /likes/{likeId} {
        allow read: if isAuthenticated();
        // User can only create/delete their own like
        allow write: if isAuthenticated() && request.auth.uid == likeId;
      }

      // Comments subcollection
      match /comments/{commentId} {
        allow read: if isAuthenticated();

        // Create comment: must be authenticated and own the comment
        allow create: if isAuthenticated() &&
                         request.resource.data.userId == request.auth.uid &&
                         request.resource.data.keys().hasAll(['userId', 'text']);

        // Delete comment: comment author OR post author can delete
        allow delete: if isAuthenticated() &&
                         (request.auth.uid == resource.data.userId ||
                          request.auth.uid == get(/databases/$(database)/documents/feed/$(postId)).data.userId);
      }
    }

    // Community: Reports collection (write-only for users)
    match /reports/{reportId} {
      allow create: if isAuthenticated() &&
                       request.resource.data.reporterId == request.auth.uid &&
                       request.resource.data.keys().hasAll(['type', 'targetId', 'reporterId', 'reason']);
      allow read: if false; // Only admins can read (via Firebase Console)
    }
  }
}
